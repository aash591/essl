# ESSL Device Configuration
# Copy this file to .env.local and update the values

# ============================================
# Device Configuration
# ============================================
# IP address of the biometric attendance device
NEXT_PUBLIC_DEVICE_IP=<device_ip>
# Port number for device communication (default: 4370)
NEXT_PUBLIC_DEVICE_PORT=<device_port>
# Serial number of the biometric device
NEXT_PUBLIC_DEVICE_SERIAL=<device_serial>

# ============================================
# Supabase Configuration
# ============================================
# Supabase project URL (e.g., http://localhost:8000 or https://your-project.supabase.co)
NEXT_PUBLIC_SUPABASE_URL=<supabase_url>
# Supabase anonymous/public key (found in Supabase dashboard > Settings > API)
NEXT_PUBLIC_SUPABASE_ANON_KEY=<supabase_anon_key>
# Supabase service role key (found in Supabase dashboard > Settings > API)
# WARNING: Keep this secret! Never expose this in client-side code.
SUPABASE_SERVICE_ROLE_KEY=<supabase_service_role_key>

# ============================================
# Database Configuration
# ============================================
# Optional override for PostgreSQL host URL (if different from NEXT_PUBLIC_SUPABASE_URL)
# Uncomment and set if your database host differs from Supabase URL
#SUPABASE_DB_HOST_POSTGRES_URL=<supabase_db_host IP>  
# PostgreSQL database password
SUPABASE_DB_PASSWORD=<supabase_db_password>
# Direct PostgreSQL connection port (default: 5433 - expose it in docker-compose.yml)
SUPABASE_DB_PORT_POSTGRES_DIRECT=<postgres_port>
# Enable direct PostgreSQL connection (set to true to use direct connection)
SUPABASE_DB_USE_DIRECT=true
# PostgreSQL database username (default: postgres)
SUPABASE_DB_USER_POSTGRES=<postgres_user>
# PostgreSQL database name (default: postgres)
SUPABASE_DB_NAME_POSTGRES=<postgres_db_name>

# ============================================
# Application Configuration
# ============================================
# Project environment (e.g., DEVELOPMENT, STAGING, PRODUCTION)
PROJECT_ENVIRONMENT=<environment>
# Database schema name for production environment
DB_SCHEMA_NAME_PROD=<schema_name_prod>
# Database schema name for development OR test environment
DB_SCHEMA_NAME_DEV=<schema_name_dev>
# Disable automatic database migrations on startup (set to true to disable)
DISABLE_AUTO_MIGRATE=false
